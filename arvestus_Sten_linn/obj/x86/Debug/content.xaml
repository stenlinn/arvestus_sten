<Page
    x:Class="arvestus_Sten_linn.content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:arvestus_Sten_linn"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:ConnectionId='1' Background="Gray" Margin="-12,0,-12,0" x:Name="rootPivot">
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE716;"></FontIcon>
                        <TextBlock Text="Item 1"></TextBlock>
                    </StackPanel>
                </PivotItem.Header>
                <TextBlock Text="Content 1."/>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE719;"></FontIcon>
                        <TextBlock Text="Item 2"></TextBlock>
                    </StackPanel>
                </PivotItem.Header>
                <TextBlock Text="Content 2."/>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE71E;"></FontIcon>
                        <TextBlock Text="Item 3"></TextBlock>
                    </StackPanel>
                </PivotItem.Header>
                <TextBlock Text="Content 3."/>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE723;"></FontIcon>
                        <TextBlock Text="Item 4"></TextBlock>
                    </StackPanel>
                </PivotItem.Header>
                <TextBlock Text="Content 4."/>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

